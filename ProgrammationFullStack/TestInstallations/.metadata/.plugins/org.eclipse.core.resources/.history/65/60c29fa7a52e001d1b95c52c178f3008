package fr.polytech.fsback.controllers;

import java.util.ArrayList;

import org.slf4j.Logger;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import fr.polytech.fsback.Livres;
import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@RestController()
@RequiredArgsConstructor
@Slf4j
public class LivresController {
	ArrayList<Livres> listeDeLivres;	
	
	@GetMapping("/{titre}")
	public @ResponseBody String getLivre(@PathVariable String titre) {
		//log.info("retourne un livre par son titre");
		System.out.println("retourne un livre par son titre");
		
		return "Livre" + titre;
		
	}
	
	@GetMapping()
	public @ResponseBody ArrayList<Livres> getLivres(){
		//ArrayList<Livres> toReturn = new ArrayList<Livres>();
		
		return this.listeDeLivres;
	}
}
