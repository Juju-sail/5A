<Window x:Class="Simulateur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulateur"
        mc:Ignorable="d"
        Title="Simulateur" Height="450" Width="800">
    <ItemsControl ItemsSource="{Binding}">

        <!-- Panneau contenant les éléments -->
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas IsItemsHost="True" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <!-- Configure le composant ContentPresenter qui encapule chaque élément affiché -->
        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="Canvas.Left" Value="{Binding PositionX}" />
                <Setter Property="Canvas.Bottom" Value="{Binding PositionY}" />
            </Style>
        </ItemsControl.ItemContainerStyle>

        <!-- Affichage d'un élément -->
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Ellipse Fill="LightCoral" Width="64" Height="64" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>

    </ItemsControl>
</Window>
