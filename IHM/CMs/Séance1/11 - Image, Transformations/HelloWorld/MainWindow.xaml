<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="Première application" Height="450" Width="800"
        Background="LightGoldenrodYellow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Dans le panneau Propriétés : Action de génération : Ressource -->
        <Image Source="mario.png" Stretch="Uniform" Grid.Column="0" />

        <Image Source="mario.png" Stretch="Uniform" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <!--
            <Image.RenderTransform>
                <RotateTransform Angle="30" />
            </Image.RenderTransform>
            -->
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" /> <!-- Symmérie / axe Y -->
                    <RotateTransform Angle="30" />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
