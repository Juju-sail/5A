<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="Première application" Height="450" Width="800"
        Background="LightGoldenrodYellow">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
        
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4">
            <StackPanel>
                <!-- Dans le panneau Propriétés : Action de génération : Ressource -->
                <Image Source="mario.png" Stretch="Uniform" Height="48" Margin="4" />
                <TextBlock Text="Mario" HorizontalAlignment="Center" Margin="4"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4">
            <StackPanel>
                <!-- Dans le panneau Propriétés : Action de génération : Ressource -->
                <Image Source="toad.png" Stretch="Uniform" Height="48" Margin="4" />
                <TextBlock Text="Toad" HorizontalAlignment="Center" Margin="4"/>
            </StackPanel>
        </Button>

    </StackPanel>
</Window>
