<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="Première application" Height="450" Width="800"
        Background="LightGoldenrodYellow">
    <Canvas>
        <TextBlock Canvas.Right="50" Canvas.Top="30" Text="Hello World!" Margin="4" />
        <TextBox Canvas.Top="40" Canvas.Left="60" x:Name="_nomTb" Margin="4" Padding="4" />
        <Button Canvas.Bottom="100" Canvas.Left="30" Content="Ok" Margin="4" Padding="4" Click="Button_Click" />
    </Canvas>
</Window>
