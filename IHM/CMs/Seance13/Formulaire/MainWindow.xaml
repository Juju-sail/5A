<Window x:Class="Formulaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Formulaire"
        mc:Ignorable="d"
        Title="Formulaire" Height="450" Width="800">
    <DockPanel Margin="4">
        <local:EditControl DockPanel.Dock="Top" />
        <ListBox ItemsSource="{Binding Contacts}" SelectedItem="{Binding Selection}" Margin="4">
            <!-- Modèle d'affichage de chaque élément de la liste -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="2">
                        <TextBlock Text="{Binding Nom}" FontWeight="Bold" Margin="2" />
                        <TextBlock Text="{Binding Prenom}" Margin="2" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
